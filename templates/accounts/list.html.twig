{% extends "base.html.twig" %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <h1>Total balance: <strong>{{ content.totalBalance|number_format(2, ",", " ") }} Kč</strong></h1>

                {% for account in content.accounts %}
                    <a href="{{ path("account_detail", {"id": account.id}) }}">
                        <div class="card mt-2 mb-2">
                            <div class="card-body">
                                <div>{{ account.name }}</div>
                                <div>{{ account.number }}</div>
                                <div><strong>{{ account.balance|number_format(2, ",", " ") }} Kč</strong></div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}